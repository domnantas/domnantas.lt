---
import BaseHead from '@/components/BaseHead.astro';
export interface Props {
	title: string;
	description: string;
	permalink?: string;
}

const { title, description, permalink } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />
	</head>
	<body>
		<slot />
	</body>
</html>
