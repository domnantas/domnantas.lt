<style>
	.paper-wrapper {
		margin: 0 auto;
		padding: var(--space-m) var(--space-s);
	}

	.paper {
		max-width: 940px;
		box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
		margin: 0 auto;
		padding: var(--space-m-l);
	}

	.profile-picture {
		width: 100%;
		max-width: 100px;
		max-height: 100px;
		border-radius: 60px;
		object-fit: cover;
	}

	header {
		display: grid;
		row-gap: var(--space-m);
		margin-bottom: var(--space-s);
	}

	.contacts {
		display: grid;
	}

	.name {
		margin-bottom: var(--space-2xs);
		font-size: var(--step-3);
	}

	.subtitle {
		font-size: var(--step-1);
	}

	hr {
		margin: var(--space-xs) 0;
	}

	.section-title {
		font-size: var(--step-0);
		margin-bottom: var(--space-xs);
	}

	.date {
		white-space: nowrap;
	}

	a {
		color: var(--color-text);
	}

	section {
		margin-bottom: var(--space-xs);
	}

	@media (min-width: 768px) {
		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}
	}

	@media print {
		.paper-wrapper {
			margin: 0;
			padding: 0;
		}

		.paper {
			box-shadow: none;
			padding: 0;
		}

		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}

		a {
			text-decoration: none;
		}
	}
</style>
