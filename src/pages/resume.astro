<style>
	.paper-wrapper {
		margin: 40px auto 0;
		padding: 20px;
	}

	.paper {
		max-width: 1280px;
		min-height: 297mm;
		box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
		margin: 0 auto;
		padding: 40px 24px;
	}

	.profile-picture {
		width: 100%;
		max-width: 120px;
		max-height: 120px;
		border-radius: 60px;
		object-fit: cover;
	}

	header {
		display: grid;
		row-gap: 24px;
		margin-bottom: 24px;
	}

	.contacts {
		display: grid;
	}

	@media (min-width: 768px) {
		.paper {
			padding: 60px;
		}

		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}
	}

	@media print {
		.paper-wrapper {
			margin: 0;
			padding: 0;
		}

		.paper {
			box-shadow: none;
			padding: 0;
		}

		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}
	}
</style>
