<style>
	.paper-wrapper {
		margin: 0 auto;
		padding: var(--space-m) var(--space-s);
		background: linear-gradient(
			to bottom,
			hsla(0, 0%, 100%, 0.6),
			hsla(0, 0%, 100%, 0)
		);
		background-size: cover;
		min-height: 100vh;
		position: relative;
	}

	#gradient-canvas {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		--gradient-color-1: #5706f9;
		--gradient-color-2: #ec9cfc;
		--gradient-color-3: #decffc;
		--gradient-color-4: #f76ec9;
	}

	.paper {
		max-width: 940px;
		box-shadow: 0 0.75rem 2rem 0 hsla(0, 0%, 0%, 0.1);
		margin: 0 auto;
		padding: var(--space-m-l);
		background-color: hsla(0, 0%, 100%, 0.7);
		backdrop-filter: blur(10px);
		border-radius: 16px;
	}

	.profile-picture {
		width: 100%;
		max-width: 100px;
		max-height: 100px;
		border-radius: 60px;
		object-fit: cover;
	}

	header {
		display: grid;
		row-gap: var(--space-m);
		margin-bottom: var(--space-s);
	}

	.contacts {
		display: grid;
	}

	.name {
		margin-bottom: var(--space-2xs);
		font-size: var(--step-3);
	}

	.subtitle {
		font-size: var(--step-1);
	}

	.text-gradient {
		background-image: linear-gradient(
			45deg,
			var(--color-primary) 25%,
			var(--color-complimentary-2)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.section-title {
		font-size: var(--step--1);
		font-weight: 400;
		margin-top: var(--space-l);
		margin-bottom: var(--space-xs);
	}

	.date {
		white-space: nowrap;
	}

	.workplace {
		margin-bottom: var(--space-xs);
	}

	.lighter {
		opacity: 0.7;
	}

	@media (min-width: 768px) {
		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}

		.workplace,
		.education-facility {
			display: grid;
			grid-template-columns: 180px 1fr;
		}

		.experiences {
			grid-column-start: 2;
		}
	}

	@media print {
		body {
			font-size: 14px;
		}

		a {
			text-decoration: none;
		}

		.paper-wrapper {
			margin: 0;
			padding: 0;
			background: none;
		}

		#gradient-canvas {
			display: none;
		}

		.paper {
			box-shadow: none;
			padding: 0;
			background: none;
		}

		header {
			grid-template-columns: auto 1fr;
			align-items: center;
		}

		.text-gradient {
			print-color-adjust: exact;
		}

		.contacts {
			justify-self: end;
			text-align: right;
		}

		.workplace,
		.education-facility {
			display: grid;
			grid-template-columns: 180px 1fr;
		}

		.experiences {
			grid-column-start: 2;
		}
	}
</style>
